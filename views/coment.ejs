<%- include header %>
<div class="container pt-3">
  <div class="card">
    <div class="card-header">
      Commentaire
    </div>
    <% for(var i = 0; i < data.length; i++) { %>
    <!-- if coment -->
    <% if(data[i]){ %>
      <div class="border p-2">
      <!-- author/date coment -->
      <p class="card-text">
        Auteur : <%=data[i].pseudo%><br>
        Ajout√© <%= moment(data[i].date_coment).fromNow() %>
      </p>
      <!-- text coment -->
      <p class="card-text">
        <%=data[i].text%>
      </p>
    </div>

    <!-- if no coment -->
    <% } else { %>
    <p>Aucun Commentaires disponible.</p>
    <% } %>

    <% } %>
  </div>
</div>


<%- include footer %>
